<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Roboto", sans-serif;
      }

      .main {
        height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .container {
        width: 70%;
        height: 80%;
        background-color: #eff1f5;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        padding: 20px 50px;
        padding-top: 80px;
        box-sizing: border-box;
      }
      .heading {
        font-size: 30px;
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 40px;
      }
      .question_container {
        background-color: #aa89f1;
        height: 100%;
        border-radius: 8px;
        padding: 40px 35px;
      }
      .question {
        display: none;
      }
      .question.active {
        display: block;
      }
      .question_heading {
        color: white;
        font-size: 28px;
        font-weight: 600;
        text-transform: uppercase;
        margin-bottom: 10px;
      }

      .question_description,
      .option {
        color: white;
        font-size: 22px;
        font-weight: 400;
        margin-bottom: 10px;
      }

      button {
        margin-right: 20px;
        margin-top: 40px;
        padding: 20px 30px;
        font-size: 20px;
        outline: none;
        font-family: inherit;
        border: none;
        font-weight: 500;
        border-radius: 6px;
        background-color: #746ea1;
        color: white;
      }

      button:hover {
        background-color: #6057a3;
      }
    </style>
    <title>Quizz</title>
  </head>
  <body>
    <div class="main">
      <div class="container">
        <div class="heading">Quiz : <%= course%></div>
        <div class="question_container">
          <% for(let i of data) { %>
          <div class="question">
            <div class="question_heading"><%= i.questionname %></div>
            <div class="question_description"><%= i.questiondescription %></div>
            <div class="options">
              <div class="option 1">
                <input type="checkbox" name="" id="" /> <%= i.option1 %>
              </div>
              <div class="option 2">
                <input type="checkbox" name="" id="" /> <%= i.option2 %>
              </div>
              <div class="option 3">
                <input type="checkbox" name="" id="" /> <%= i.option3 %>
              </div>
              <div class="option 4">
                <input type="checkbox" name="" id="" /> <%= i.option4 %>
              </div>
            </div>
          </div>
          <% } %>

          <button class="btn-next">Next</button>
          <button class="btn-submit">Submit</button>
        </div>
      </div>
    </div>

    <script>
      var active = 0;
      var questions = document.querySelectorAll(".question");
      console.log(questions);
      questions[active].classList.add("active");

      var next = document.querySelector(".btn-next");
      var submit = document.querySelector(".btn-submit");

      if (active != questions.length - 1) {
        submit.style.display = "none";
      }

      next.addEventListener("click", () => {
        if (active != questions.length - 1) {
          questions[active].classList.remove("active");
          active++;
          questions[active].classList.add("active");
        }
        if (active == questions.length - 1) {
          //   next.style.visibility = "hidden";
          submit.style.display = "inline-block";
        }
      });
    </script>
  </body>
</html>
